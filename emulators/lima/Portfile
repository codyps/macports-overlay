# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4
PortSystem 1.0

PortGroup           golang 1.0
go.setup            github.com/lima-vm/lima 0.6.3 v

destroot {
    xinstall -m 755 ${worksrcpath}/bin/* ${destroot}${prefix}/bin/
    xinstall -m 644 ${worksrcpath}/share/* ${destroot}${prefix}/share/

    $(${worksrcpath}/bin/limactl completion bash >${destroot}${prefix}/share/bash-completion/completions/limactl
    chmod 644 ${destroot}${prefix}/share/bash-completion/completions/limactl
}
